<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".MainActivity.FragmentOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/buttonStatement"
            android:gravity="center"
            android:layout_margin="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/item_options"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/icon_lenh" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lệnh" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonStruct"
            android:gravity="center"
            android:layout_margin="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/item_options"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:padding="5dp"
                android:layout_height="65dp"
                android:src="@drawable/icon_structure" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cấu trúc" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/buttonInterrupt"
            android:gravity="center"
            android:layout_margin="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/item_options"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="10dp"
                android:src="@drawable/icon_ngat" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngắt" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonMacro"
            android:gravity="center"
            android:layout_margin="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/item_options"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/icon_macro" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macro" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>