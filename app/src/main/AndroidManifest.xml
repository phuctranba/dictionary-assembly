<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dictionaryassembly">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AssemblyEditActivity.AssemblyEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AssemblyDetailActivity.AssemblyDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AssemblyListActivity.AssemblyListActivity"
            android:label="Lệnh"
            android:parentActivityName=".MainActivity.MainActivity" />
        <activity
            android:name=".HistoryActivity.HistoryActivity"
            android:label="Lịch sử"
            android:parentActivityName=".MainActivity.MainActivity" />
        <activity
            android:name=".UserActivity.UserActivity"
            android:label="@string/title_bar"
            android:parentActivityName=".MainActivity.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SplashActivity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchActivity.SearchActivity"
            android:label="Tìm kiếm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity.LoginActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".MainActivity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>